---
import { getCollection } from "astro:content";

const jobs = (await getCollection("jobs"));
---

<h2>Experience</h2>

<ul>
  {
    jobs.map((job) => {
      return (
        <li>
        <section>
          <header>
            <h3>
              <span>
                {job.data.company}&nbsp;â€” {job.data.location}
              </span>
              <span>
                {job.data.start}&nbsp;- {job.data.end}
              </span>
            </h3>
          </header>
          <p>
            <em>{job.data.role}</em>
          </p>
          <ul>
            {job.data.tasks.map((task: unknown) => (
              <li>{task}</li>
            ))}
          </ul>
        </section>
      </li>
      );
    })
  }
</ul>

<style>
  h3 {
    display:flex;
    gap: 1em;
    justify-content: space-between;
  }
  li {
    margin: 0;
    list-style: none;
  }
  ul {
    margin: 0;
    padding: 0;
  }
</style>